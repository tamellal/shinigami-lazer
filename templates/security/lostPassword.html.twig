{% extends 'layouts/nav.html.twig' %}

{% block content %}

    {# Affichage du formulaire de r√©initialisation du mot de passe #}

    <h3 class="text-center mt-3">{% trans %}security.user.lostpassword{% endtrans %}</h3>

    <div class="row">
        <div class="col-sm-12">
            {{ form_start(form) }}
            <div class="col-sm-12 col-lg-6 offset-lg-3">
               {{ form_label(form.email) }}
               {{ form_widget(form.email) }}
             </div>
            <div class="form-group col-12 text-center">
                {{ form_widget(form.submit) }}
            </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}

{% block page_title %}
    {% trans %}security.user.lostpasswordtitle{% endtrans %}
{% endblock %}

