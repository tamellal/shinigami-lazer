{% extends 'layouts/nav.html.twig' %}

{% set active = 'connexion' %}

{% block page_title %}
    {% trans %}security.user.login{% endtrans %}
{% endblock %}

{% block content %}


    {# Affichage du formulaire de connexion #}

    <h3 class="text-center mt-3">{% trans %}security.user.login{% endtrans %}</h3>

    <div class="row">

        <div class="col-sm-12 col-lg-6 offset-lg-3">

            {% if error %}
                <div class="alert alert-danger">
                    <i class="fa fa-exclamation-triangle" aria-hidden="true"></i>
                    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>

                </div>
            {% endif %}


            <form action="{{ url('security_login') }}"
                  method="POST" class="form-horizontal centrage">

                {# Email et Mot de Passe #}

                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label for="mon_id">Adresse mail</label>
                        <input name="_username" id="EMAILAUTEUR"
                               value="{{ last_email }}"
                               class="form-control" required type="email"
                               placeholder="Saisissez votre Email">
                    </div>
                    <div class="form-group col-md-6">
                        <label for="mon_id">Mot de passe</label>
                        <input name="_password" id="MDPAUTEUR"
                               class="form-control" required type="password"
                               placeholder="*******">
                    </div>
                </div>

                <input type="hidden" name="_target_path" value="{{ path('user_profile') }}" />

                <div class="form-group col-12 text-center">
                    {# Bouton Submit #}
                    <input type="submit" class="btn btn-info"
                           value="Connexion"> <br>
                    <a href="{{ path('security_lostPassword') }}">Mot de passe oubli√©</a>
                </div>

            </form>
        </div>

    </div>

{% endblock %}





