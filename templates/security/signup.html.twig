{% extends "layouts/nav.html.twig" %}
{% set active = 'inscription' %}
{% block page_title %} {% trans %}security.user.signup{% endtrans %} {% endblock %}

{% block content %}


    {# Affichage du formulaire d'inscription #}

    <h3 class="text-center mt-3">{% trans %}security.user.signup{% endtrans %}</h3>


    <div class="row">
        <div class="col-sm-12">
            {{ form_start(form) }}
            <div class="form-row">
                <div class="form-group col-md-6">
                    {{ form_label(form.lastName) }}
                    {{ form_widget(form.lastName) }}
                </div>
                <div class="form-group col-md-6">
                    {{ form_label(form.firstName) }}
                    {{ form_widget(form.firstName) }}
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    {{ form_label(form.nickName) }}
                    {{ form_widget(form.nickName) }}
                </div>
                <div class="form-group col-md-6">
                    {{ form_label(form.address) }}
                    {{ form_widget(form.address) }}
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    {{ form_label(form.phone) }}
                    {{ form_widget(form.phone) }}
                </div>
                <div class="form-group col-md-6">
                    {{ form_label(form.birthDate) }}
                    {{ form_widget(form.birthDate) }}
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    {{ form_label(form.email) }}
                    {{ form_widget(form.email) }}
                </div>
                <div class="form-group col-md-6">
                    {{ form_label(form.password) }}
                    {{ form_widget(form.password) }}
                </div>
            </div>
            <div class="form-group col-12 text-center">
                {{ form_widget(form.submit) }}
            </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}