{% extends 'layouts/admin.html.twig' %}

{% block content %}

    <h2 class="text-center">{% trans %}admin.club.list{% endtrans %}</h2>

    <table class="table table-striped table-middle-aligned">
        <thead>
        <tr class="bg-info">
            <th scope="col">CODE_CENTRE</th>
            <th scope="col">ADRESSE</th>
            <th scope="col" class="text-center"><i class="fa fa-cogs" aria-hidden="true"></i> Action</th>
        </tr>
        </thead>
        <tbody>
        {% for club in clubs %}
            <tr>
                <td>{{ club.code }}</td>
                <td>{{ club.address }}</td>
                <td class="text-center">
                    <div class="item-actions">
                        <a href="{{ path('admin_club_update', {id: club.id}) }}" class="btn btn-sm btn-primary">
                            <i class="fa fa-eye" aria-hidden="true"></i> Mettre à jour
                        </a>
                        <a href="{{ path('admin_club_delete', {id: club.id}) }}" class="btn btn-sm btn-primary">
                            <i class="fa fa-edit" aria-hidden="true"></i> Supprimer
                        </a>
                    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4" align="center">Aucun club trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <p class="lead"></p>
    <a href="{{ path('admin_club_create') }}"  class="btn btn-primary btn-lg btn-block">Nouveau</a>
    <p class="lead"></p>
{% endblock %}

{% block page_title %}
    Cartes
{% endblock %}

