{% extends 'layouts/admin.html.twig' %}

{% block content %}
    <h1 class="text-center">{% trans %}admin.index.customers.list{% endtrans %}</h1>


    <table class="table table-striped table-middle-aligned">
        <thead>
        <tr class="bg-info">
            <th scope="col">PRENOM</th>
            <th scope="col">NOM</th>
            <th scope="col" class="text-center"><i class="fa fa-cogs" aria-hidden="true"></i> ACTION</th>
        </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.firstName }}</td>
                <td>{{ user.lastName }}</td>

                <td class="text-center">
                    <div class="item-actions">
                        <a href="{{ path('admin_edit_user', {id: user.id}) }}" class="btn btn-sm btn-primary">
                            <i class="fa fa-eye" aria-hidden="true"></i> Mettre à jour
                        </a>
                        <a href="{{ path('admin_delete_user', {id: user.id}) }}" class="btn btn-sm btn-primary">
                            <i class="fa fa-edit" aria-hidden="true"></i> Supprimer
                        </a>
                    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4" align="center">Aucun client enregistré</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}

{% block final_javascripts %}
    <script>
        $(function () {
            $('#anchor-nav-customers').addClass('active');
        })
    </script>
{% endblock %}
