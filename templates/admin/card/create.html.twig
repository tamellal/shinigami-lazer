{% extends 'layouts/admin.html.twig' %}
{% set active = 'creation' %}
{% block page_title %} Création {% endblock %}

{% block content %}

    <h2 class="text-center">{% trans %}admin.card.create{% endtrans %}</h2>

    {%  if app.request.get('creation') == 'success' %}
        <div class="alert alert-success">
            <p class="text-center"><i class="fa fa-thumbs-up fa-2x" aria-hidden="true"></i></p>
            <p class="text-center">Félicitation, votre carte a été créée</p>
        </div>
    {% else %}

    <div class="row">
        <div class="col-sm-12">
            {{ form_start(form) }}
           <div class="form-row">
                <div class="form-group col-md-6">
                    {{ form_label(form.club) }}
                    {{ form_widget(form.club) }}
                </div>
                <div class="form-group col-md-6">
                    {{ form_label(form.code) }}
                    {{ form_widget(form.code) }}
                </div>
            </div>
            <div class="form-group col-12 text-center">
                {{ form_widget(form.submit) }}
            </div>
            {{ form_end(form) }}
        </div>
    </div>
    {% endif %}
{% endblock %}